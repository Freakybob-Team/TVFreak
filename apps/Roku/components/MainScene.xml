            font="font:MediumBoldSystemFont"
        />

        <Label
            id="errorMessageLabel"
            text="An error has occurred: Error"
            width="1280"
            height="690"
            color="#ff0000"
            translation="[0, 0]"
            horizAlign="center"
            vertAlign="center"
            visible="false"
            font="font:MediumBoldSystemFont"
        />

        <Label
            id="issueMessageLabel"
            text="If this issue keeps happening, please report this to Freakybob-Team or mpax235"
            width="1280"
            height="690"
            color="#ff0000"
            translation="[0, 30]"
            horizAlign="center"
            vertAlign="center"
            visible="false"
            font="font:MediumBoldSystemFont"
        />
    </children>
